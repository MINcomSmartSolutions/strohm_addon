<odoo>
	<data>
		<!-- Add fields to the form view -->
		<record id="view_move_form" model="ir.ui.view">
			<field name="name">account.move.form</field>
			<field name="model">account.move</field>
			<field name="inherit_id" ref="account.view_move_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='invoice_date']" position="after">
					<field name="session_start"
					       string="Beginn der Ladesession"
					       readonly="state != 'draft'"/>
					<field name="session_end"
					       string="Ende der Ladesession"
					       readonly="state != 'draft'"/>
				</xpath>
			</field>
		</record>

		<!-- Add session fields to invoice lines inside the form view -->
		<record id="view_move_form_line_session" model="ir.ui.view">
			<field name="name">account.move.form.line.session</field>
			<field name="model">account.move</field>
			<field name="inherit_id" ref="account.view_move_form"/>
			<field name="arch" type="xml">
				<!-- Target the quantity field in invoice_line_ids list -->
				<xpath expr="//field[@name='invoice_line_ids']//field[@name='quantity']" position="after">
					<field name="session_start"
					       string="Session Start"
					       optional="show"
					       widget="datetime"/>
					<field name="session_end"
					       string="Session End"
					       optional="show"
					       widget="datetime"/>
				</xpath>
			</field>
		</record>

		<!-- Add fields to the list view -->
		<record id="view_move_tree" model="ir.ui.view">
			<field name="name">account.move.tree</field>
			<field name="model">account.move</field>
			<field name="inherit_id" ref="account.view_move_tree"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='invoice_date']" position="after">
					<field name="session_start"
					       string="Beginn der Ladesession"
					       readonly="state != 'draft'"/>
					<field name="session_end"
					       string="Ende der Ladesession"
					       readonly="state != 'draft'"/>
				</xpath>
			</field>
		</record>
	</data>
</odoo>
